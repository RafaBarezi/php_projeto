#include <stdio.h>
#include <stdlib.h>// necessário p/ as funções rand() e srand()
#include <locale.h>
// normalmente se usa a #include <time.h> quando se trabalha com time, mas neste caso o sistema funcionou normalemnte sem ela, acabei optei por não incluir.

/*

Nome do programa: Preenche e Exibe Vetor.
Objetivo: Estipula números aleatórios através de vetor e depois inverte a numeração com base nos dados já gerados.
Data Criação: 02/04/2022.

*/

int main()
{
    setlocale(LC_ALL, "Portuguese_Brazil");
    system("title Preenche e Exibe Vetor");
    system("color 03");

    int num, vetor[10];

    /*

      srand(time(NULL)) objetiva inicializar o gerador de números aleatórios com o valor da função time(NULL).

      Este por sua vez, é calculado como sendo o total de segundos passados desde 1 de janeiro de 1970 até a data atual. Desta forma, a cada execução o valor da "semente" será diferente.

    */

    srand(time(NULL));

    for(num = 0 ; num < 10; num++)
    {
        vetor[num] = rand() % 100; // Sorteia um número e atribui à posição do vetor
    }


    printf("Vetor na ordem original >>>\n\n");

    for(num = 0 ; num < 10; num++)

    {
        printf("%i ",vetor[num]);
    }

    printf("\n\nVetor na ordem inversa >>>\n\n");

    for(num = 9 ; num >= 0; num--)

    {
        printf("%i """,vetor[num]);
    }

    return 0;
}
